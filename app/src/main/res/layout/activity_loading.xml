    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/loadingActivity_dotsLoadingGifImage"
        android:layout_width="374dp"
        android:layout_height="85dp"
        android:layout_marginBottom="96dp"
        android:src="@drawable/dotsloading"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loadingActivity_text"
        tools:ignore="MissingConstraints" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/loadingActivity_GifImage"
        android:layout_width="422dp"
        android:layout_height="362dp"
        android:src="@drawable/loadingscreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@id/loadingActivity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planning Route"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loadingActivity_GifImage"
        app:layout_constraintVertical_bias="0.0"
        android:textColor="@color/black"
        />

