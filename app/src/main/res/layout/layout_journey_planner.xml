<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3ECEC"
    android:padding="10dp">

    <TextView
        android:id="@+id/stop_journey_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:text="Stop1 :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pick_up_dock_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stop_journey_label"
        android:layout_marginTop="2dp"
        android:text="Pick up dock:"
        android:textSize="15sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/drop_off_dock_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pick_up_dock_label"
        android:layout_marginTop="2dp"
        android:text="Drop off dock:"
        android:textSize="15sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/stop_journey_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:text="@string/blankData"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pick_up_dock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stop_journey_title"
        android:layout_marginStart="120dp"
        android:layout_marginTop="2dp"
        android:text="@string/blankData"
        android:textSize="15sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/drop_off_dock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pick_up_dock"
        android:layout_marginStart="120dp"
        android:layout_marginTop="2dp"
        android:text="@string/blankData"
        android:textSize="15sp"
        android:textStyle="italic" />

</RelativeLayout>