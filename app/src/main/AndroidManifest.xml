<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.backstreet_cycles">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Backstreet_cycles">
        <activity
            android:name=".view.NavigationActivity"
            android:exported="false" />
        <activity
            android:name=".PlanJourneyActivity"
            android:exported="false" />
        <activity
            android:name=".views.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.HomePageActivity" />
        <activity android:name=".views.LogInActivity" />
        <activity android:name=".views.ChangeEmailOrPasswordActivity"
            android:parentActivityName=".views.HomePageActivity"/>
        <activity android:name=".views.EditUserProfileActivity"
            android:parentActivityName=".views.HomePageActivity"/>
        <activity android:name=".views.SignUpActivity"
            android:parentActivityName=".views.LogInActivity"/>
        <activity android:name=".view.JourneyActivity" />
    </application>

</manifest>